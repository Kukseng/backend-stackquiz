# StackQuiz Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Media Storage
MEDIA_SERVER_PATH=/var/app/media-upload/
MEDIA_BASE_URI=https://stackquiz-api.stackquiz.me/media

# Keycloak Configuration
KEYCLOAK_REALM=stackquiz
KEYCLOAK_SERVER_URL=https://keycloak-prod.rattanakmony.com
KEYCLOAK_CLIENT_ID=admin-cli
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret-here
KEYCLOAK_TOKEN_CLIENT_ID=nextjs
KEYCLOAK_TOKEN_CLIENT_SECRET=your-keycloak-token-client-secret-here
KEYCLOAK_TOKEN_URL=https://keycloak-prod.rattanakmony.com/realms/stackquiz/protocol/openid-connect/token
KEYCLOAK_ISSUER_URI=https://keycloak-prod.rattanakmony.com/realms/stackquiz

# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/stackquiz-db
DATABASE_USERNAME=stackquiz-user
DATABASE_PASSWORD=your-database-password-here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6380

# OpenAI API (for AI quiz generation)
OPENAI_API_KEY=your-openai-api-key-here

# Application Configuration
API_URL=https://stackquiz-api.stackquiz.me
SERVER_PORT=9999

